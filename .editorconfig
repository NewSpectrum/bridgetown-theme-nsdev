[*]
tab_width = 4
indent_size = 4
indent_style = tab
end_of_line = lf

[*.{yaml,yml}]
tab_width = 2
indent_size = 2
indent_style = space  # IMPORTANT: Most yaml parsers don't support tabs


[*.{html,liquid,js,jsx,ts,tsx,css,scss,sass,less,json,json5,jsonc}]
tab_width = 4
indent_size = 4
indent_style = space